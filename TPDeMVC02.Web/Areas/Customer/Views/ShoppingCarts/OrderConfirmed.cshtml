@model int
<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 text-center">
            <div class="alert alert-success shadow-lg p-4 rounded">
                <h2 class="text-success mb-4">
                    <i class="bi bi-check-circle-fill"></i> Order Placed Successfully!
                </h2>
                <p class="text-muted mb-4">
                    Your order number is <span class="fw-bold text-primary">@Model</span>. Thank you for your purchase!
                </p>
                <a class="btn btn-lg btn-primary" asp-action="Index" asp-controller="Home">
                    <i class="bi bi-arrow-left-circle"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>