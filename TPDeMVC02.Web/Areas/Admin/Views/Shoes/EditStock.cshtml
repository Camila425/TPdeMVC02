@model EditStockShoeSize
@{
    ViewData["Title"] = "Edit Stock";
}

<form method="post" class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ShoeId" />
    <input type="hidden" asp-for="SizeId" />

    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Stock for Size</h2>
        </div>

        <div class="form-group">
            <label class="control-label">Stock Actual</label>
            <input asp-for="StockActual" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="StockNuevo" class="control-label"></label>
            <input asp-for="StockNuevo" class="form-control" />
            <span asp-validation-for="StockNuevo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Save</button>
        <a asp-controller="Shoes" asp-action="AssignSizes" asp-route-id="@Model.ShoeId"
           class="btn btn-secondary">Back to List</a>
    </div>
</form>

