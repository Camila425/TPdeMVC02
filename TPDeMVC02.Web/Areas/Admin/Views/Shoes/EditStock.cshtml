@model EditStockShoeSize
@{
    ViewData["Title"] = "Edit Stock";
}

<div class="d-flex justify-content-center mt-4">
    <form method="post" class="w-75 bg-white p-4 rounded shadow">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ShoeId" />
        <input type="hidden" asp-for="SizeId" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h2 class="text-info text-center mb-4">Edit Stock for Size</h2>

        <div class="mb-3">
            <label class="form-label">Stock Actual</label>
            <input asp-for="StockActual" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="StockNuevo" class="form-label">New Stock</label>
            <input asp-for="StockNuevo" class="form-control" id="StockNuevo" />
            <span asp-validation-for="StockNuevo" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-controller="Shoes" asp-action="AssignSizes" asp-route-id="@Model.ShoeId" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
